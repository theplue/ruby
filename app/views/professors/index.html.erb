<p id="notice"><%= notice %></p>
<div>
<%= form_tag(search_professors_url, method: "get") do %>
    <%= label_tag(:q, "Search for professor by department:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("search") %>
<% end %>
</div>
<h1>Listing Professors</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Office</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.fname %></td>
        <td><%= professor.lname %></td>
        <td><%= professor.office %></td>
        <td><%= professor.department %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path %>
